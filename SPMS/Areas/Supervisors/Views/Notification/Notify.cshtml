
@{
	ViewData["Title"] = "Notify";
	Notification noti = new Notification();
}


<Partial name="_DashboardHeader" />
<Partial name="_Sidebar" />


	<div class="content-body">
			<div class="container-fluid">
				<div class="row page-titles">
					<ol class="breadcrumb">
						<li class="breadcrumb-item active"><a href="javascript:void(0)">Form</a></li>
						<li class="breadcrumb-item"><a href="javascript:void(0)">Element</a></li>
					</ol>
				</div>
				<!-- row -->
				<div class="row">
					<div class="col-xl-6 col-lg-6">
						<div class="card">
							<div class="card-header">
								<h4 class="card-title">Brodct Noti</h4>
							</div>
							<div class="card-body">
								<div class="basic-form">
									<form asp-action="Notify" method="post">
										<div class="mb-3">
											<input type="text" asp-for="@noti.Content" name="Content" class="form-control input-rounded" placeholder="input-rounded">
										</div>
										<button type="submit" class="btn btn-primary">Send Noti</button>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>

			</div>
	</div>
