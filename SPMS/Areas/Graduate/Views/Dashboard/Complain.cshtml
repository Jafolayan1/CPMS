@model Complaint

@{
	ViewData["Title"] = "Complaints Page";
}

<Partial name="_DashboardHeader" />
<Partial name="_Sidebar" />


<div class="content-body">
	<div class="container-fluid">
		<div class="row page-titles">
			<ol class="breadcrumb">
				<li class="breadcrumb-item active"><a href="javascript:void(0)" id="noloader">Dashboard</a></li>
				<li class="breadcrumb-item"><a href="javascript:void(0)" id="noloader">Complaints</a></li>
			</ol>
		</div>
		<!-- row -->
		<div class="row">
			<div class="col-xl-6 col-lg-6">
				<div class="card">
					<div class="card-header">
						<h4 class="card-title">Provide details of the difficulty/obervation</h4>
					</div>
					<div class="card-body">
						<div class="basic-form">
							<form asp-controller="dashboard" asp-action="complain" method="post">
								<div class="mb-3">
									<textarea rows="4" asp-for="Message" id="messageId" class="form-control" required></textarea>
								</div>
								<button type="submit" class="btn btn-primary">Send</button>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>

	</div>
</div>
