<head>
	<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
	<script>
		$(document).ready(function () {
			$("#myModal").modal('show');
		});
	</script>
</head>

@if (CurrentUser.Email == null)
{

	<div id="myModal" class="modal fade">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title text-center">Notice ! </h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal"></button>

				</div>
				<div class="modal-body">
					<p> <b> Hello @CurrentUser.Surname, Kindly Compelete below to get started with your project. Goodluck ! 💪💪 </b></p>

					<ol type="i">
						<li>Go to your profile</li>
						<li>Update your profile email &Aacute; phone no</li>
						<li>Select your project Supervisor</li>
						<li>Submit. Then proceed to submit your project proposal</li>
					</ol>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-danger light" data-bs-dismiss="modal">Close</button>
				</div>
			</div>
		</div>
	</div>
}
